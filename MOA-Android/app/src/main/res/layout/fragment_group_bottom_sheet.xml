<?xml version="1.0" encoding="utf-8"?>
<!-- 그룹 화면 바텀 시트 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_top_32"
    android:gravity="center"
    tools:context=".view.main.group.GroupBottomSheetFragment">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:background="@drawable/radius_all_24"
        android:backgroundTint="@color/gray_500"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/tv_group_bottom_sheet_group_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="그룹 만들기"
        style="@style/Pretendard_SubTitle1"
        android:textColor="@color/gray_900"
        android:paddingVertical="16dp"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_300" />

    <TextView
        android:id="@+id/tv_group_bottom_sheet_group_join"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="그룹 들어가기"
        style="@style/Pretendard_SubTitle1"
        android:textColor="@color/gray_900"
        android:paddingVertical="16dp"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_group_bottom_sheet_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        style="@style/Pretendard_Popup1"
        android:background="@color/main_300"
        android:textColor="@color/white"
        android:paddingVertical="16dp"/>
</LinearLayout>