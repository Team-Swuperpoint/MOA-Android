<?xml version="1.0" encoding="utf-8"?>
<!-- 마이페이지 화면 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.main.mypage.MypageFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/iv_mypage_profile"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:src="@drawable/temp_youngk"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_mypage_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Ongothic_H3"
            tools:text="영현"
            android:textColor="@color/gray_900"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginTop="56dp"/>

        <LinearLayout
            android:id="@+id/lLayout_mypage_nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Ongothic_SubTitle1"
                android:textColor="@color/gray_900"
                android:text="닉네임 설정"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_24"
                app:tint="@color/gray_600"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"/>

        <LinearLayout
            android:id="@+id/lLayout_mypage_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Ongothic_SubTitle1"
                android:textColor="@color/gray_900"
                android:text="알림 설정"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_24"
                app:tint="@color/gray_600"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"/>

        <!-- 다른 View -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_mypage_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Pretendard_Popup2"
            android:text="로그아웃"
            android:layout_gravity="center"
            android:textColor="@color/gray_500"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</layout>