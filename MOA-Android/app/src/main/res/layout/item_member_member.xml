<?xml version="1.0" encoding="utf-8"?>
<!-- 그룹원 목록 화면의 그룹원 아이템 뷰 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp">

    <FrameLayout
        android:id="@+id/fLayout_item_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginEnd="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/iv_item_member"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/temp_youngk"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Pretendard_Body1"
        android:textColor="@color/gray_900"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="영현"/>

    <ImageButton
        android:id="@+id/iBtn_item_member_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete_20"
        android:visibility="invisible"/>
</LinearLayout>